pipeline {
  agent any
  stages
  {
    stage("Build")
    {
      steps
      {
        echo "Generating a build"
      }
    }
    stage("Test")
    {
      steps
      {
        echo "Testing the build"
      }
    }
    stage("Deploy")
    {
      steps
      {
        echo "Deploying the build"
      }
    }
  }
}
